<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment8Tshirt.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#FAE62F" Padding="24" CornerRadius="0">
            <Label Text="D.O.C T-Shirt App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Entry Placeholder="Enter your name"/>

        <Entry Placeholder="Enter your Gender"/>

        <Entry Placeholder="Enter your T-Shirt Size"/>

        <Entry Placeholder="Enter your T-Shirt Color"/>

        <Entry Placeholder="Enter your Date of order"/>

        <Entry Placeholder="Enter your Shipping Address"/>
            
        <Button Text="Show your list" Command="{Binding TestButtonCommand}" />


    </StackLayout>
        </ScrollView >

</ContentPage>
